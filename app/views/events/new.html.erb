<% now = Time.zone.now %>
<div class="container">
<div class="page-header">
  <h1>イベント作成</h1>
</div>

<%= form_with(model: @event, local: true) do |form| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with(model: @event, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :place %>
    <%= form.text_field :place, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time, start_year: now.year, end_year: now.year + 1 %>
  </div>
  
  <div class="form-group">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time, start_year: now.year, end_year: now.year + 1 %>
  </div>
  
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_field :content, class: "form-control",row: 10 %>
  </div>
  <%= form.submit "作成",class: 'btn btn-default', data: { disable_with: "作成中..." } %>
<% end %>
<% end %>
</div>